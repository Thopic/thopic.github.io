@article{moulanaLandscapeAntibodyBinding2023,
  title = {The Landscape of Antibody Binding Affinity in {{SARS-CoV-2 Omicron BA}}.1 Evolution},
  author = {Moulana, Alief and Dupic, Thomas and Phillips, Angela M and Chang, Jeffrey and Roffler, Anne A and Greaney, Allison J and Starr, Tyler N and Bloom, Jesse D and Desai, Michael M},
  editor = {{van der Meer}, Jos W},
  year = {2023},
  month = feb,
  journal = {eLife},
  volume = {12},
  pages = {e83442},
  publisher = {{eLife Sciences Publications, Ltd}},
