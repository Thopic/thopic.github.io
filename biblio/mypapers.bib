  pmid = {33296360},
  keywords = {Adaptive Immunity,Humans,{Receptors, Antigen, T-Cell, alpha-beta},T-Lymphocytes,V(D)J Recombination},
  file = {/home/thomas/snap/zotero-snap/common/Zotero/storage/H7T2C5GY/Sethna et al. - 2020 - Population variability in the generation and selec.pdf}
}

